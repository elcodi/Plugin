        "doctrine/common": "~2.4",

        "symfony/event-dispatcher": "~2.6",
        "symfony/dependency-injection": "~2.6",
        "symfony/expression-language": "~2.6",
        "symfony/http-kernel": "~2.6",
        "symfony/console": "~2.6",
        "symfony/yaml": "~2.6",
        "twig/twig": "~1.16",

        "elcodi/configuration": "~0.4.0",
        "elcodi/core": "~0.4.0"
