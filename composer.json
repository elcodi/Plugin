{
    "name": "elcodi/plugin",
    "description": "Elcodi Plugin Component",
    "keywords": [
        "elcodi",
        "plugin",
        "ecommerce"
    ],
    "homepage": "https://github.com/elcodi/Plugin",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Aldo Chiecchia",
            "email": "zimage@tiscali.it"
        },
        {
            "name": "Elcodi Community",
            "homepage": "https://github.com/elcodi/Plugin/contributors"
        }
    ],
    "require": {
        "php": ">=5.4",
        "doctrine/common": "^2.5",

        "symfony/event-dispatcher": "^2.7",
        "symfony/dependency-injection": "^2.7",
        "symfony/expression-language": "^2.7",
        "symfony/http-kernel": "^2.7",
        "symfony/console": "^2.7",
        "symfony/yaml": "^2.7",
        "twig/twig": "^1.18",

        "elcodi/configuration": "^1.0@dev",
        "elcodi/core": "^1.0@dev"
    },
    "require-dev": {
        "phpunit/phpunit": "4.5.0"
    },
    "autoload": {
        "psr-4": {
            "Elcodi\\Component\\Plugin\\": ""
        }
    },
    "suggest": {
        "symfony/dependency-injection": "For EventDispatcher HookSystem adapter"
    },
    "config": {
        "bin-dir": "bin"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
