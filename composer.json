{
    "name": "elcodi/plugin-bundle",
    "description": "Elcodi Plugin Bundle",
    "keywords": [
        "elcodi",
        "plugin",
        "ecommerce"
    ],
    "homepage": "https://github.com/elcodi/PluginBundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "authors": [
        {
            "name": "Marc Morera",
            "email": "yuhu@mmoreram.com"
        },
        {
            "name": "Aldo Chiecchia",
            "email": "zimage@tiscali.it"
        },
        {
